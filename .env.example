# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Database Configuration
DATABASE_URL=sqlite:///./simplecrawl.db

# AI API Configuration (Optional)
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Proxy Configuration (Optional)
# Single proxy URL (http://user:pass@host:port or socks5://host:port)
PROXY_URL=
# Or path to file with proxy list (one per line)
PROXY_LIST_FILE=
# Enable proxy rotation
PROXY_ROTATION_ENABLED=false
# Rotation strategy: round_robin or random
PROXY_ROTATION_STRATEGY=round_robin
# Number of failures before proxy cooldown
PROXY_MAX_FAILURES=3
# Cooldown duration in seconds
PROXY_COOLDOWN_SECONDS=300

# Scraping Limits
MAX_CRAWL_DEPTH=50
MAX_CRAWL_PAGES=5000
MAX_CONCURRENT_REQUESTS=10
JOB_RETENTION_HOURS=24
REQUEST_TIMEOUT_SECONDS=30

# Browser Configuration
HEADLESS=true
USER_AGENT=SimpleCrawl/1.0 (https://github.com/simplecrawl)
BROWSER_POOL_SIZE=5

# Media Configuration
MEDIA_STORAGE_DIR=/app/media
MEDIA_FORMATS=jpeg,jpg,png,gif,webp,avif,svg
MAX_MEDIA_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60
